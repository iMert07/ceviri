<h1>Özel Klavye Çevirici</h1>
<select id="mode">
  <option value="toCustom">Güncelden Bu Düzen</option>
  <option value="toNormal">Bundan Güncele</option>
</select>

<textarea class="output" id="output"></textarea>

<div class="keyboard" id="keyboard">
  <!-- 1. Satır -->
  <div class="key">θ</div><div class="key">1</div><div class="key">2</div>
  <div class="key">3</div><div class="key">4</div><div class="key">5</div>
  <div class="key">6</div><div class="key">7</div><div class="key">8</div>
  <div class="key">9</div><div class="key">Φ</div><div class="key">Λ</div>
  <div class="empty"></div>
  
  <!-- 2. Satır -->
  <div class="key">Þ</div><div class="key">V</div><div class="key">H</div>
  <div class="key">Ϟ</div><div class="key">Y</div><div class="key">G</div>
  <div class="key">F</div><div class="key">Σ</div><div class="key">M</div>
  <div class="key">K</div><div class="key">Ϩ</div><div class="key">Ψ</div>
  <div class="empty"></div>
  
  <!-- 3. Satır -->
  <div class="key">E</div><div class="key">A</div><div class="key">İ</div>

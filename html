<script>
  const output = document.getElementById('output');
  
  // Klavye tuşları
  document.querySelectorAll('.key').forEach(key => {
    key.addEventListener('click', () => {
      output.value += key.innerText;
    });
  });

  // Basit örnek çeviri tablosu (örnek)
  const toCustom = {
    "a":"A","b":"B","c":"Ç","d":"D","e":"E","f":"F","g":"G","h":"H","i":"İ","j":"Þ",
    "k":"K","l":"L","m":"M","n":"N","o":"Ω","p":"Π","r":"R","s":"S","t":"T","u":"Y","v":"V","z":"Z"
  };

  const toNormal = Object.fromEntries(Object.entries(toCustom).map(([k,v])=>[v,k]));

  document.getElementById('mode').addEventListener('change', ()=>{
    const mode = document.getElementById('mode').value;
    let text = output.value;
    if(mode === 'toCustom'){
      output.value = text.split('').map(ch => toCustom[ch.toLowerCase()] || ch).join('');
    } else {
      output.value = text.split('').map(ch => toNormal[ch] || ch).join('');
    }
  });
</script>


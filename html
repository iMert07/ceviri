  <div class="key">Π</div><div class="key">Ω</div><div class="key">Q</div>
  <div class="key">Ç</div><div class="key">Z</div><div class="key">Γ</div>
  <div class="key">T</div><div class="key">B</div><div class="empty"></div>
  <div class="empty"></div><div class="empty"></div><div class="empty"></div>
  <div class="empty"></div>
